<h3>予定内容の変更</h3>

<%= render "shared/error", obj: @scheduledate %> 

<%= form_with model: @scheduledate do |f| %>
<table>
    <tr>
    <th><%= f.label :title ,"タイトル" %></th>
    <td><%= f.text_field :title %></td>
    </tr>

    <tr>
    <th><%= f.label :start ,"開始日" %></th>
    <td><%= f.date_field :start %></td>
    </tr>

    <tr>
    <th><%= f.label :end_date ,"終了日" %></th>
    <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
    <th><%= f.label :check ,"終日" %></th>
    <td><%= f.check_box :check %></td>
    </tr>
    <tr>
    <th><%= f.label :memo ,"スケジュールメモ" %></th>
    <td><%= f.text_area :memo %></td>
    </tr>
</table>

<div>
    <ul>
    <li><%= f.submit "変更を完了する"%></li>
    <li><%= link_to "予定一覧に戻る", "/scheduledates/index" %></li>
    </ul>
</div>
<% end %>